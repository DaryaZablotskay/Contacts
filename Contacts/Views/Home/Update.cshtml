@using Contacts.Dto
@model ContactsPage

@{
    ViewData["Title"] = "Update Contact";
}

@{
    var contact = (Contact)ViewBag.Contacts;
}

<div>
    <form method="post" asp-action="Update" onsubmit="return jQueryAjaxPost(this);" >
        <div class="col">
            <div class="col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@contact.Name">
            </div>
            <div class="col-md-6">
                <label asp-for="MobilePhone" class="control-label"></label>
                <input asp-for="MobilePhone" class="form-control" value="@contact.MobilePhone">
            </div>
            <div class="col-md-6">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" value="@contact.JobTitle">
            </div>
            <div class="col-md-6">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" type ="date" value="@contact.BirthDate.ToString("yyyy-MM-dd")">
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary btn-block">Update</button>
        </div>
    </form>
</div>